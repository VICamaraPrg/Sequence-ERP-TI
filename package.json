{
  "name": "sequence-erp-ti",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start:all": "npm-run-all --parallel dev api",
    "dev": "ng serve --proxy-config src/proxy.conf.json",
    "api": "json-server --watch ./src/assets/db.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.{ts,html}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss}\"",
    "i18n:init": "ngx-translate-extract --input ./src --output ./src/assets/i18n/template.json --key-as-default-value --replace --format json",
    "i18n:extract": "ngx-translate-extract --input ./src --output ./src/assets/i18n/{en,es,fr,de}.json --clean --format json"
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.4.0",
    "npm": "Please use pnpm to install dependencies",
    "yarn": "Please use pnpm to install dependencies",
    "bun": ">=1.2.0"
  },
  "packageManager": "pnpm@9.4.0",
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@ngrx/signals": "^19.0.1",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@primeng/themes": "^19.0.10",
    "@tailwindcss/postcss": "^4.0.15",
    "json-server": "1.0.0-beta.3",
    "postcss": "^8.5.3",
    "primeicons": "^7.0.0",
    "primeng": "^19.0.10",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.0.15",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "^19.0.0",
    "@angular-devkit/build-angular": "^19.2.4",
    "@angular/cli": "^19.2.4",
    "@angular/compiler-cli": "^19.2.0",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.13",
    "@vendure/ngx-translate-extract": "^9.4.0",
    "angular-eslint": "^19.2.1",
    "babel-jest": "^29.7.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "tailwindcss-primeui": "^0.5.1",
    "ts-jest": "^29.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.27.0"
  }
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup.jest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    }
  }
}
